@model CSharpSoChiTieu.Models.PaginationHistorySearchInput

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow-lg border-0">
                <div class="card-header pb-0 bg-gradient-primary text-white">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center">
                            <h6 class="mb-0 text-white font-weight-bold">Lịch sử thu chi</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body px-4 pt-2 pb-2">
                    <div class="p-3">
                        <form id="formSearch" action="~/History/Search">
                            <input type="hidden" name="PageSize" value="@Model.PageSize" />
                            <div class="input-group input-group-outline mb-4">
                                <input type="text" class="form-control border-radius-lg"
                                       placeholder="Tìm kiếm danh mục..."
                                       name="searchValue" value="@Model.SearchValue" autofocus>
                                <button class="btn btn-primary mb-0 border-radius-lg" type="submit">
                                    <i class="material-symbols-rounded">search</i>
                                </button>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-4 col-sm-4">
                                    <select id="yearSelect" name="year" class="form-select border-radius-lg shadow-sm">
                                        <option value="">Chọn năm</option>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <select id="monthSelect" name="month" class="form-select border-radius-lg shadow-sm">
                                        <option value="">Chọn tháng</option>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <select id="daySelect" name="day" class="form-select border-radius-lg shadow-sm">
                                        <option value="">Chọn ngày</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="searchResult" class="table-responsive p-0">
                        <!-- Kết quả tìm kiếm sẽ được load vào đây -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Khởi tạo năm
            const currentYear = new Date().getFullYear();
            const yearSelect = $('#yearSelect');
            for (let year = currentYear; year >= currentYear - 10; year--) {
                yearSelect.append(`<option value="${year}">${year}</option>`);
            }

            // Khởi tạo tháng
            const monthSelect = $('#monthSelect');
            for (let month = 1; month <= 12; month++) {
                monthSelect.append(`<option value="${month}">${month}</option>`);
            }

            // Hàm cập nhật số ngày dựa trên tháng và năm
            function updateDays() {
                const year = parseInt($('#yearSelect').val());
                const month = parseInt($('#monthSelect').val());
                const daySelect = $('#daySelect');

                // Xóa tất cả options hiện tại
                daySelect.empty();
                daySelect.append('<option value="">Chọn ngày</option>');

                if (year && month) {
                    // Tính số ngày trong tháng
                    const daysInMonth = new Date(year, month, 0).getDate();

                    // Thêm các options cho ngày
                    for (let day = 1; day <= daysInMonth; day++) {
                        daySelect.append(`<option value="${day}">${day}</option>`);
                    }
                }
            }

            // Xử lý sự kiện khi thay đổi tháng hoặc năm
            $('#monthSelect, #yearSelect').change(function() {
                updateDays();
                doSearch(1);
            });

            // Xử lý sự kiện khi thay đổi ngày
            $('#daySelect').change(function() {
                doSearch(1);
            });

            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return;
            });

            doSearch(@Model.Page);
        });

        function doSearch(page) {
            var url = $("#formSearch").prop("action");
            var postData = $("#formSearch").serializeArray();
            postData.push({ "name": "page", "value": page });

            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });

            return;
        }
    </script>
}
