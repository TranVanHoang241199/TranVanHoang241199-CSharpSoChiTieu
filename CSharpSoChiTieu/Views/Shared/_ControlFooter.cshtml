@* Partial View: _FooterMenu.cshtml - Menu dưới cùng cho Mobile *@
@{
    // Giả sử bạn có cách lấy đường dẫn avatar thực tế, nếu không dùng ảnh mặc định
    var userAvatarUrl = User.FindFirst("AvatarUrl")?.Value ?? "~/img/avatar.jpg"; // Lấy từ claim hoặc dùng default
}

<nav class="navbar fixed-bottom navbar-light bg-white d-lg-none bottom-nav shadow">
    <div class="container-fluid d-flex justify-content-around px-1">
        @* Giảm padding ngang container *@

        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "IncomeExpense" ? "active" : "")"
           asp-controller="IncomeExpense" asp-action="Index" title="Tổng quan">
            <i class="material-symbols-rounded nav-icon">dashboard</i>
            <span class="nav-text">Tổng quan</span>
        </a>

        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Expense" && ViewContext.RouteData.Values["Controller"].ToString() == "IncomeExpense" ? "active" : "")"
           asp-controller="IncomeExpense" asp-action="Expense" title="Khoản chi">
            <i class="material-symbols-rounded nav-icon">receipt_long</i>
            <span class="nav-text">Khoản chi</span>
        </a>

        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" && ViewContext.RouteData.Values["Controller"].ToString() == "IncomeExpense" ? "active" : "")"
           asp-controller="IncomeExpense" asp-action="Reports" title="Báo cáo">
            <i class="material-symbols-rounded nav-icon">analytics</i>
            <span class="nav-text">Báo cáo</span>
        </a>

        <div class="nav-item dropup">
            @if (User.Identity.IsAuthenticated)
            {
                @* Khi đã đăng nhập: Hiển thị Avatar làm trigger *@
                <a class="nav-link text-center avatar-trigger-link" href="#" id="navbarDropdownDetails" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Tài khoản">
                    <img src="@Url.Content(userAvatarUrl)" class="avatar avatar-xs rounded-circle" alt="Avatar">
                    <span class="nav-text">Tài khoản</span> @* Có thể giữ lại text nhỏ nếu muốn *@
                </a>
            }
            else
            {
                @* Khi chưa đăng nhập: Hiển thị icon Menu *@
                <a class="nav-link text-center" href="#" id="navbarDropdownDetails" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Chi tiết">
                    <i class="material-symbols-rounded nav-icon">menu</i>
                    <span class="nav-text">Chi tiết</span>
                </a>
            }

            @* Menu Dropup (Nội dung giữ nguyên logic) *@
            <ul class="dropdown-menu dropdown-menu-end mb-1" aria-labelledby="navbarDropdownDetails">
                @* Thêm mb-1 *@
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                            <i class="material-symbols-rounded">account_circle</i> Hồ sơ (@User.Identity.Name)
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                            <i class="material-symbols-rounded">settings</i> Cài đặt
                        </a>
                    </li>
                    <li><hr class="dropdown-divider my-1"></li>
                    <li>
                        <a class="dropdown-item" asp-controller="IncomeExpense" asp-action="Categories">
                            <i class="material-symbols-rounded">category</i> Danh mục
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="IncomeExpense" asp-action="Income">
                            <i class="material-symbols-rounded">payments</i> Khoản thu
                        </a>
                    </li>
                    <li><hr class="dropdown-divider my-1"></li>
                    <li>
                        <form class="dropdown-item-form" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="material-symbols-rounded">logout</i> Đăng xuất
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li> <a class="dropdown-item" asp-controller="Account" asp-action="Login"><i class="material-symbols-rounded">login</i> Đăng nhập</a> </li>
                    <li> <a class="dropdown-item" asp-controller="Account" asp-action="Register"><i class="material-symbols-rounded">person_add</i> Đăng ký</a> </li>
                    <li><hr class="dropdown-divider my-1"></li>
                    <li> <a class="dropdown-item" asp-controller="IncomeExpense" asp-action="Categories"><i class="material-symbols-rounded">category</i> Danh mục</a> </li>
                    <li> <a class="dropdown-item" asp-controller="IncomeExpense" asp-action="Income"><i class="material-symbols-rounded">payments</i> Khoản thu</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
<style>
    /* --- Bottom Navigation Bar Styles --- */
    .bottom-nav {
        background-color: var(--bs-white);
        border-top: 1px solid var(--bs-gray-200);
        padding-top: 0.1rem; /* Giảm padding trên/dưới nữa */
        padding-bottom: 0.1rem;
        min-height: 56px; /* Chiều cao tối thiểu */
        z-index: 1030;
    }

        /* Style cho từng mục nav link */
        .bottom-nav .nav-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--bs-gray-600);
            text-decoration: none;
            flex-grow: 1;
            padding: 0.2rem 0.1rem; /* Giảm padding */
            line-height: 1.2;
            position: relative;
            border-radius: 0.5rem;
            transition: background-color 0.15s ease-in-out;
        }
    /* Bỏ padding mặc định của nav-link trong navbar */
    .navbar .bottom-nav .nav-link {
        padding-top: 0.2rem;
        padding-bottom: 0.2rem;
    }


    .bottom-nav .nav-link .nav-icon {
        font-size: 1.5rem; /* Kích thước icon */
        margin-bottom: 0; /* Bỏ margin dưới icon */
    }

    .bottom-nav .nav-link .nav-text {
        font-size: 0.65rem; /* Cỡ chữ nhỏ */
        margin-top: 1px; /* Khoảng cách nhỏ giữa icon và text */
        font-weight: 500;
        white-space: nowrap; /* Đảm bảo text không xuống dòng */
    }

    /* Trạng thái Hover */
    .bottom-nav .nav-link:hover {
        background-color: var(--bs-gray-100);
    }

    /* Trạng thái Active */
    .bottom-nav .nav-link.active {
        color: var(--bs-primary); /* Dùng màu primary của theme */
        font-weight: 600;
    }

    /* Avatar Trigger */
    .bottom-nav .avatar-trigger-link {
        /* Có thể thêm padding nếu cần */
    }

    .bottom-nav .nav-link img.avatar {
        width: 26px; /* Kích thước avatar */
        height: 26px;
        object-fit: cover; /* Đảm bảo ảnh vừa vặn */
        border: 1px solid rgba(0, 0, 0, 0.1); /* Viền nhẹ cho avatar */
        margin-bottom: 1px; /* Khoảng cách với text */
    }

    .bottom-nav .nav-link.active img.avatar {
        border: 2px solid var(--bs-primary); /* Viền màu khi active (tùy chọn) */
    }


    /* Dropup Menu */
    .bottom-nav .dropup .dropdown-menu {
        border: 1px solid var(--bs-gray-200);
        box-shadow: 0 -0.3rem 1rem rgba(0, 0, 0, 0.1); /* Shadow nhẹ hơn */
        border-radius: 0.375rem;
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        margin-bottom: 0.25rem !important; /* Đẩy menu lên chút */
    }

    .bottom-nav .dropdown-item { /* Style cho các mục trong dropup */
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        padding: 0.4rem 1rem;
    }

        .bottom-nav .dropdown-item i {
            margin-right: 0.75rem;
            opacity: 0.8;
            font-size: 1.1rem;
        }

    .bottom-nav .dropdown-item-form button { /* Style nút logout */
        /* Giữ nguyên style cũ cho nút logout */
        padding: 0.4rem 1rem;
        width: 100%;
        text-align: left;
        border: none;
        background: none;
        color: var(--bs-dropdown-link-color);
        font-size: 0.875rem;
        display: flex;
        align-items: center;
    }

        .bottom-nav .dropdown-item-form button i {
            margin-right: 0.75rem;
            opacity: 0.8;
            font-size: 1.1rem;
        }

        .bottom-nav .dropdown-item-form button:hover {
            background-color: var(--bs-dropdown-link-hover-bg);
            color: var(--bs-dropdown-link-hover-color);
        }

    .bottom-nav .dropdown-divider {
        margin: 0.3rem 0;
    }


    /* Đảm bảo nội dung body không bị che */
    @@media (max-width: 991.98px) {
        body

    {
        padding-bottom: 60px; /* Điều chỉnh nếu chiều cao bottom-nav thay đổi */
    }

    }
</style>
