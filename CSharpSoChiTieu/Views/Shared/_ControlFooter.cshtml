@* Partial View: _FooterMenu.cshtml - Menu dưới cùng cho Mobile *@
@{
    var userAvatarUrl = User.FindFirst("AvatarUrl")?.Value ?? "~/img/default-avatar.jpg";
}

<nav class="navbar fixed-bottom navbar-light bg-white d-lg-none bottom-nav shadow">
    <div class="container-fluid d-flex justify-content-around px-1">
        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "IncomeExpense" ? "active" : "")"
           asp-controller="IncomeExpense" asp-action="Index" title="Tổng quan">
            <i class="material-symbols-rounded nav-icon">dashboard</i>
            <span class="nav-text">Tổng quan</span>
        </a>

        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "History" ? "active" : "")"
           asp-controller="History" asp-action="Index" title="Lịch sử">
            <i class="material-symbols-rounded nav-icon">receipt_long</i>
            <span class="nav-text">Lịch sử</span>
        </a>

        <a class="nav-link text-center @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Report" ? "active" : "")"
           asp-controller="Report" asp-action="Index" title="Báo cáo">
            <i class="material-symbols-rounded nav-icon">analytics</i>
            <span class="nav-text">Báo cáo</span>
        </a>

        <div class="nav-item dropup">
            <a class="nav-link text-center" href="#" id="navbarDropdownDetails" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Menu">
                <i class="material-symbols-rounded nav-icon">menu</i>
                <span class="nav-text">Menu</span>
            </a>

            <div class="dropdown-menu dropdown-menu-end mb-1 settings-panel" aria-labelledby="navbarDropdownDetails">
                <div class="settings-header">
                    <h6 class="mb-0">Tùy chỉnh</h6>
                </div>

                <div class="settings-body">
                    <div class="settings-group">
                        <label class="settings-label">Chế độ tối</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="darkModeSwitch">
                        </div>
                    </div>

                    <div class="settings-group">
                        <label class="settings-label">Thông báo</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="notificationSwitch">
                        </div>
                    </div>

                    <div class="settings-group">
                        <label class="settings-label">Ngôn ngữ</label>
                        <select class="form-select form-select-sm">
                            <option value="vi">Tiếng Việt</option>
                            <option value="en">English</option>
                        </select>
                    </div>
                </div>

                <div class="settings-footer">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                            <i class="material-symbols-rounded">account_circle</i> Hồ sơ
                        </a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                            <i class="material-symbols-rounded">settings</i> Cài đặt
                        </a>
                        <form class="dropdown-item-form" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="material-symbols-rounded">logout</i> Đăng xuất
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                            <i class="material-symbols-rounded">login</i> Đăng nhập
                        </a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            <i class="material-symbols-rounded">person_add</i> Đăng ký
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</nav>

<style>
    .bottom-nav {
        background-color: var(--bs-white);
        border-top: 1px solid var(--bs-gray-200);
        padding: 0.1rem 0;
        min-height: 56px;
        z-index: 1030;
    }

        .bottom-nav .nav-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--bs-gray-600);
            text-decoration: none;
            flex-grow: 1;
            padding: 0.2rem 0.1rem;
            line-height: 1.2;
            position: relative;
            border-radius: 0.5rem;
            transition: background-color 0.15s ease-in-out;
        }

            .bottom-nav .nav-link .nav-icon {
                font-size: 1.5rem;
                margin-bottom: 0;
            }

            .bottom-nav .nav-link .nav-text {
                font-size: 0.65rem;
                margin-top: 1px;
                font-weight: 500;
                white-space: nowrap;
            }

            .bottom-nav .nav-link:hover {
                background-color: var(--bs-gray-100);
            }

            .bottom-nav .nav-link.active {
                color: var(--bs-primary);
                font-weight: 600;
            }

    /* Settings Panel Styles */
    .settings-panel {
        width: 280px;
        padding: 0;
        border: 1px solid var(--bs-gray-200);
        box-shadow: 0 -0.3rem 1rem rgba(0, 0, 0, 0.1);
    }

    .settings-header {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid var(--bs-gray-200);
        background-color: var(--bs-gray-50);
    }

    .settings-body {
        padding: 1rem;
    }

    .settings-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .settings-label {
        margin-bottom: 0;
        font-size: 0.875rem;
    }

    .settings-footer {
        padding: 0.5rem 0;
        border-top: 1px solid var(--bs-gray-200);
    }

        .settings-footer .dropdown-item {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
        }

            .settings-footer .dropdown-item i {
                margin-right: 0.75rem;
                font-size: 1.1rem;
            }

    .form-select-sm {
        font-size: 0.875rem;
        padding: 0.25rem 2rem 0.25rem 0.5rem;
    }

    @@media (max-width: 991.98px) {
        body

    {
        padding-bottom: 60px;
    }

    }
</style>
